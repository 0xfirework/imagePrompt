# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL='http://localhost:3000'

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# Generate with: openssl rand -base64 32
# -----------------------------------------------------------------------------
NEXTAUTH_URL='http://localhost:3000'
NEXTAUTH_SECRET='change-me'

# OAuth (GitHub)
GITHUB_CLIENT_ID='change-me'
GITHUB_CLIENT_SECRET='change-me'

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# Used by Prisma/Kysely via POSTGRES_URL in packages/db
# -----------------------------------------------------------------------------
POSTGRES_URL='postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require'

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY='change-me'
RESEND_FROM='Your Name <noreply@yourdomain.com>'

# -----------------------------------------------------------------------------
# Subscriptions (Stripe)
# -----------------------------------------------------------------------------
STRIPE_API_KEY='change-me'
STRIPE_WEBHOOK_SECRET='change-me'

# Optional public price IDs (can be left empty)
NEXT_PUBLIC_STRIPE_STD_PRODUCT_ID='prod_'
NEXT_PUBLIC_STRIPE_STD_MONTHLY_PRICE_ID='price_'
NEXT_PUBLIC_STRIPE_PRO_PRODUCT_ID='prod_'
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID='price_'
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID='price_'
NEXT_PUBLIC_STRIPE_BUSINESS_PRODUCT_ID='prod_'
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PRICE_ID='price_'
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PRICE_ID='price_'

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=''
NEXT_PUBLIC_POSTHOG_HOST='https://app.posthog.com'

# Admin account (optional, comma-separated)
ADMIN_EMAIL='admin@saasfly.io,root@saasfly.io'

# Debug (optional)
IS_DEBUG=false

# -----------------------------------------------------------------------------
# Coze (扣子) Integration (optional)
# -----------------------------------------------------------------------------
# Bearer token for Coze Open API
COZE_TOKEN='change-me'
# Your workflow id for Image→Prompt generation
COZE_WORKFLOW_ID='wf_xxx'
# API base for Coze (use https://api.coze.com for international)
COZE_API_BASE='https://api.coze.cn'
# If your workflow expects different parameter keys, you can override them:
# COZE_PARAM_PROMPT_TYPE='promptType'
# COZE_PARAM_USER_QUERY='userQuery'
# COZE_PARAM_IMAGE_ID='image_file_id'
# COZE_PARAM_IMAGE_URL='image_url'

# If the default endpoints differ in your region/version, override them:
# COZE_FILES_ENDPOINT='/v1/files'
# COZE_WORKFLOW_ENDPOINT='/v1/workflow/run'

# If your workflow expects file_id wrapped as stringified JSON under the image field
# e.g. img: "{\"file_id\":\"112233\"}", enable this:
# COZE_PARAM_IMAGE_ID='img'
# COZE_IMAGE_ID_AS_JSON='true'
